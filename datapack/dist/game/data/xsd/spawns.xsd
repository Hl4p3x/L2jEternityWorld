<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="list">
		<xs:complexType>
			<xs:sequence minOccurs="1" maxOccurs="unbounded">
				<xs:element name="spawnloc" minOccurs="0" maxOccurs="1">
					<xs:complexType>
						<xs:sequence minOccurs="1" maxOccurs="1">
							<xs:element name="spawn" minOccurs="1" maxOccurs="unbounded">
								<xs:complexType>
									<xs:attribute name="amount" type="xs:positiveInteger" />
									<xs:attribute name="heading" type="xs:integer" use="required" />
									<xs:attribute name="npcId" type="xs:positiveInteger" use="required" />
									<xs:attribute name="onKillDelay" type="xs:positiveInteger" />
									<xs:attribute name="respawnDelay" type="xs:integer" use="required" />
									<xs:attribute name="periodOfDay" type="xs:integer" use="required" />
									<xs:attribute name="locX" type="xs:integer" use="required" />
									<xs:attribute name="locY" type="xs:integer" use="required" />
									<xs:attribute name="locZ" type="xs:integer" use="required" />
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute name="name" type="xs:normalizedString" use="required" />
					</xs:complexType>
				</xs:element>
				<xs:element name="spawnzone" minOccurs="0" maxOccurs="1">
					<xs:complexType>
						<xs:sequence minOccurs="1" maxOccurs="1">
							<xs:element name="spawn" minOccurs="1" maxOccurs="unbounded">
								<xs:complexType>
									<xs:attribute name="amount" type="xs:positiveInteger" />
									<xs:attribute name="heading" type="xs:integer" use="required" />
									<xs:attribute name="npcId" type="xs:positiveInteger" use="required" />
									<xs:attribute name="onKillDelay" type="xs:positiveInteger" />
									<xs:attribute name="respawnDelay" type="xs:integer" use="required" />
									<xs:attribute name="periodOfDay" type="xs:integer" use="required" />
									<xs:attribute name="locX" type="xs:integer" use="required" />
									<xs:attribute name="locY" type="xs:integer" use="required" />
									<xs:attribute name="locZ" type="xs:integer" use="required" />
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute name="name" type="xs:normalizedString" use="required" />
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>